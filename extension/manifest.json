{
  "manifest_version": 3,
  "name": "URL Logger (Minimal)",
  "version": "0.1.2",
  "description": "Manually sends current page URL to local FastAPI backend.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Save Current URL"
  }
}
